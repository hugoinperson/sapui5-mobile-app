<mvc:View
	controllerName="ui5.mobile.app.controller.Index"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	height="100%"
	displayBlock="true">
	<VBox id="app" class="ui5Mobile-app" width="100%">
		<Page id="splashPage" class="ui5Mobile-splashPage" showHeader="false" visible="{= ${layoutModel>/splash} ? true : false}" />
		<Page id="mainPage" class="ui5Mobile-mainPage" visible="{= ${layoutModel>/main} ? true : false}" />
	</VBox>
</mvc:View>